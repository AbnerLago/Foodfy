{% extends "admin/session/layout.njk" %}

{% block content %}

    <div>
        <h2>Esqueceu sua senha?</h2>
    </div>

    <form action="/admin/forgot-password" method="POST" class="reset">
        <div class="details">
            <div class="item">
                <div>E-mail</div>
                <input 
                    type="email"
                    name="email"
                    class="form-control"
                    placeholder="Digite um e-mail vÃ¡lido"
                    value="{{ user.email }}"
                    onblur="Validate.aplly(this, 'isEmail')"
                >
            </div>
        </div>

        <div class="footer">
            <button type="submit">Recuperar</button>
        </div>
    </form>

{% endblock %}